<div class="container my-5">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= @project.title %></h4>
      <hr>
      <p class="card-text"><%= @project.description %></p>
    </div>

    <div class="card-footer">  
      <div>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            
            <%= link_to "Back to projects", projects_path, class:"btn btn-sm btn-outline-primary" %>
            
            <% if current_user %>
              <%= link_to "Edit this project", edit_project_path(@project), class:"btn btn-sm btn-outline-secondary" %>
            
              <%= button_to "Destroy this project", @project, method: :delete, class:"btn btn-sm btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>